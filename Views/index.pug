          //- li.nav-item
          //-   a.nav-link(href='/places') Places




    main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2.text-center Sign Up

        // register form
        form(method='POST' action='/register').m-5
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='first and last' name='name')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='Phone') Phone:
            input#favoriteBook.form-control(type='tel', placeholder='Phone' name='phone')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          button.btn.btn-primary(type='submit') Sign up

